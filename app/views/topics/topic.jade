extends ../layout

block content
    .Home
        a(href="/") Home
    .Title #{topic.title}
    - if (articles.length)
    - each article in articles
        .Article
            .ArticleListTitle
                a(href='/articles/'+article.id, title=article.value.Title) #{article.value.Title}
            .ArticleDate
                span #{formatDate(article.value.TimeStamp)}
            .ArticleDelete
                a(href='/articles/' + article.id +'/delete') delete
            .ArticleEdit
                a(href='/articles/' + article.id +'/edit') edit
    - else
        .NoArticles No articles.&nbsp;
    .Create
        a(href="/topics/" + topic._id + "/articles/add") add
