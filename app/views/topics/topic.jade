extends ../layout

block content
    .Title #{topic.title}

    - if (articles.length)
    - each article in articles
        .Article
            .ArticleTitle
                a(href='/topics/'+topic._id+'/articles/'+article.id, title=article.value.Title) #{article.value.Title}
            .ArticleDate
                span (#{article.value.TimeStamp})
    - else
        .NoArticles
            No articles.&nbsp;
    .Create
        a(href="/topics/" + topic._id + "/articles/add") add